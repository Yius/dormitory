<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="10dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_gravity="center_horizontal"
        android:background="#D9D9D9">

        <!--这是用于提交编号-->
<!--        <TextView-->
<!--            android:id="@+id/tv_theID"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="无"-->
<!--            android:layout_marginLeft="7dp"-->
<!--            android:textSize="15sp"/>-->

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:paddingTop="10dp"
            android:gravity="top"
            android:text="标题"
            android:layout_marginLeft="9dp"
            android:textSize="20sp"
            android:textColor="#111111"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:paddingTop="8dp"
            android:layout_toRightOf="@id/title"
            android:layout_marginLeft="50dp"
            android:text="标题"
            android:textSize="22sp"
            android:textColor="#111111"/>

        <TextView
            android:id="@+id/houseparentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_below="@id/title"
            android:gravity="top"
            android:text="发起人"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:textColor="#111111"/>

        <TextView
            android:id="@+id/tv_houseparentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_toRightOf="@id/houseparentName"
            android:layout_below="@id/tv_title"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:text="发起人"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Rtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_below="@id/houseparentName"
            android:gravity="top"
            android:text="发起时间"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:textColor="#111111"/>

        <TextView
            android:id="@+id/tv_Rtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_toRightOf="@id/Rtime"
            android:layout_below="@id/tv_houseparentName"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="发起时间"
            android:textSize="20sp"
            />

        <com.xuexiang.xui.widget.button.shadowbutton.ShadowButton
            android:id="@+id/sb_sign"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="top"
            android:padding="10dp"
            android:text="去签到"
            android:textSize="20dp"
            android:background="@drawable/button_main3"
            app:rb_radius="6dp"
            app:sb_color_pressed="#0303ff"
            app:sb_color_unpressed="#8aacee"
            android:lineSpacingExtra="0.5dp">
        </com.xuexiang.xui.widget.button.shadowbutton.ShadowButton>
<!--        <com.xuexiang.xui.widget.button.roundbutton.RoundButton-->
<!--            android:id="@+id/tv_sign"-->
<!--            android:layout_width="50dp"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_alignParentRight="true"-->
<!--            android:gravity="top"-->
<!--            android:padding="10dp"-->
<!--            android:text="去签到"-->
<!--            android:textSize="20dp"-->
<!--            app:rb_backgroundColor="@color/xui_config_color_50_blue"-->
<!--            app:rb_borderColor="@color/xui_config_color_50_blue"-->
<!--            app:rb_radius="6dp"-->
<!--            android:lineSpacingExtra="0.5dp"/>-->

    </RelativeLayout>
</androidx.cardview.widget.CardView>
</RelativeLayout>