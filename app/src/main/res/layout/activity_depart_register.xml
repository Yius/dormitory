<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/timg">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_depart"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        >

        <TextView
            android:id="@+id/toolbar_depart_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="离宿登记"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"/>
    </androidx.appcompat.widget.Toolbar>
    <Button
        android:id="@+id/depart_register"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:text="提 交"
        android:textColor="#000000"
        android:background="#00000000"
        android:textSize="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"/>
    <TextView
        android:id="@+id/tv_departCause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="离宿原因"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/toolbar_depart"
        android:layout_marginTop="30dp"
        android:textSize="30dp"
        android:textColor="#111111"
        />
    <EditText
        android:id="@+id/et_departCause"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:inputType="textMultiLine"
        android:minLines="4"
        android:maxLines="5"
        android:scrollbars="vertical"
        android:background="@drawable/edittext_selector"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_departCause"
        android:gravity="top"
        android:hint="离宿原因"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <TextView
        android:id="@+id/tv_depart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="离宿时间"
        android:layout_below="@+id/et_departCause"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:layout_alignLeft="@+id/tv_departCause"
        android:textColor="#111111">
    </TextView>
    <Button
        android:id="@+id/departTime"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/tv_depart"
        android:layout_alignBottom="@+id/tv_depart"
        android:background="@drawable/bg_button01"
        android:gravity="center_vertical|left"
        android:layout_marginLeft="30dp"
        android:text="请选择"
        android:drawableRight="@drawable/ic_right" />
    <TextView
        android:id="@+id/tv_departTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/departTime"
        android:layout_alignBottom="@+id/departTime"
        android:gravity="right|center_vertical"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="15dp" />
<!--    <View-->
<!--        android:id="@+id/view2"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="1px"-->
<!--        android:background="#aaaaaa"-->
<!--        android:layout_below="@id/departTime"-->
<!--        android:layout_marginLeft="15dp"-->
<!--        android:layout_marginRight="15dp">-->
<!--    </View>-->

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返宿时间"
        android:layout_below="@+id/tv_depart"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:layout_alignLeft="@+id/tv_departCause"
        android:textColor="#111111"
        />
    <Button
        android:id="@+id/backTime"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:textSize="18dp"
        android:textColor="#000000"
        android:text="请选择"
        android:layout_toRightOf="@+id/tv_back"
        android:layout_alignBottom="@+id/tv_back"
        android:background="@drawable/bg_button01"
        android:gravity="center_vertical|left"
        android:layout_marginLeft="30dp"
        android:drawableRight="@drawable/ic_right" />
    <TextView
        android:id="@+id/tv_backTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/backTime"
        android:layout_alignBottom="@id/backTime"
        android:gravity="right|center_vertical"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="15dp" />
