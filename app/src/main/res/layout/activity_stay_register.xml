<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/timg">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_stay"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        >

        <TextView
            android:id="@+id/toolbar_saty_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="留宿登记"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"/>
    </androidx.appcompat.widget.Toolbar>
    <Button
        android:id="@+id/stay_register"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:text="提 交"
        android:textColor="#000000"
        android:background="#00000000"
        android:textSize="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"/>

    <TextView
        android:id="@+id/stayDate"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="留宿时间"
        android:textSize="30sp"
        android:textColor="#111111"
        android:layout_below="@+id/toolbar_stay"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
    <TextView
        android:id="@+id/tv_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="        从\n(起始时间)"
        android:textSize="15dp"
        android:layout_below="@id/stayDate"
        android:layout_marginTop="50dp"
        android:layout_alignLeft="@id/stayDate">
    </TextView>
    <Button
        android:id="@+id/startDate"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="请选择"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/tv_start"
        android:background="@drawable/bg_button01"
        android:layout_alignBottom="@+id/tv_start"
        android:gravity="center_vertical|left"
        android:layout_marginLeft="25dp"
        android:drawableRight="@drawable/ic_right" />
    <TextView
        android:id="@+id/tv_startDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/startDate"
        android:layout_alignBottom="@id/startDate"
        android:gravity="right|center_vertical"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="15dp" />


    <TextView
        android:id="@+id/tv_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="        至\n(结束时间)"
        android:textSize="15dp"
        android:layout_below="@id/tv_start"
        android:layout_marginTop="50dp"
        android:layout_alignLeft="@+id/stayDate"
        />
    <Button
        android:id="@+id/endDate"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="请选择"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_toRightOf="@id/tv_end"
        android:background="@drawable/bg_button01"
        android:layout_alignBottom="@+id/tv_end"
        android:gravity="center_vertical|left"
        android:layout_marginLeft="25dp"
        android:drawableRight="@drawable/ic_right" />
    <TextView
        android:id="@+id/tv_endDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/endDate"
        android:layout_alignBottom="@id/endDate"
        android:gravity="right|center_vertical"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="15dp" />
<!--    <View-->
<!--        android:id="@+id/view6"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="1px"-->
<!--        android:background="#aaaaaa"-->
<!--        android:layout_below="@id/endDate"-->
<!--        android:layout_marginLeft="15dp"-->
<!--        android:layout_marginRight="15dp">-->
<!--    </View>-->
    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="联系电话"
        android:layout_below="@+id/tv_end"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:layout_alignLeft="@+id/stayDate"
        android:textColor="#111111"
        />
    <EditText
        android:id="@+id/et_contact2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="phone"
        android:scrollbars="vertical"
        android:layout_toRightOf="@id/phone"
        android:layout_alignBottom="@id/phone"
        android:gravity="center"
        android:hint="不能为空"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />

</RelativeLayout>